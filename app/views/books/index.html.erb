
<div class='container'>
  <div class='row'>
    <div class='col-md-3'>

      <h2>User info</h2>
      <%= render 'users/userinfo', user: current_user %>

      <h2 class="mt-3">New book</h2>
      <%= render 'newbook', book: @book %>
    </div>

                        <!--投稿一覧-->
<% @books.each do |book| %>

    <div>
        <p><%= image_tag book.user.get_profile_image(100,100) %></p>

        <!--詳細画面リンク-->
        <p>Title<%= link_to book_path(book.id) do %>
          <%= book.title %></p>
        <% end %>
        <p>Opinion<%= book.body %></p>
    </div>

<% end %>