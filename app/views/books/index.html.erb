<div class="container">
  <div class="row">
    
    <div class="col-md-3">
      
      <h1>User info</h1>
      <%= render 'users/userinfo', user: current_user %>
      
      <hr>
      
      <h1>New book</h1>
      <%= render 'newbook', book: @book %>
      
    </div>

    <div class="col-md-9">
      
      <h1>Books</h1>
      
      <% @books.each do |book| %>
        <div class="book-item">
          <p><%= image_tag book.user.get_profile_image(100, 100) %></p>
          <p>Title: <%= link_to book.title, book_path(book.id) %></p>
          <p>Opinion: <%= book.body %></p>
        </div>
      <% end %>
      
    </div>
  </div>
</div>