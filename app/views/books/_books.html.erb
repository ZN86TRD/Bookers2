

<table class='table'>
<thead>
<tr>
<th colspan="1"></th>
<th>Title</th>
<th>Opinion</th>
<th colspan="1"></th>
</tr>
</thead>

<tbody>
<!--投稿一覧-->
<% @books.each do |book| %>
<tr>
<!--詳細画面リンク-->
<%= link_to user_path(book.user) do %>
<td><%= image_tag book.user.get_profile_image(100,100) %>
<% end %>
</td>

<td><%= link_to book_path(book.id) do %>
<%= book.title %></td>
<% end %>

<td><%= book.body %></td>
<% end %>

</tr>
</tbody>
</table>
