<!--ユーザーの詳細-->

<h1>User info</h1>

<div>
    <!--get_profile_imageメソッド-->
    <%= image_tag @user.get_profile_image(100,100) %>

    <h3>name<%= @user.name %></h3>

    <h3>introduction<%= @user.introduction %></h3>

    <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %>
    <% end %>
</div>

<!--ユーザーの投稿一覧-->

<% @books.each do |book| %>
<div>

    <p>投稿ユーザー画像 :<%= image_tag book.user.get_profile_image(100,100) %></p>

    <p>ユーザーネーム :<%= book.user.name %></p>

    <p>Title :<%= book.title %></p>

    <p>Opinion :<%= book.body %></p>

    

</div>
<% end %>
