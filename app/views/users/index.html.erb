<div class="container">
  <div class="row">
    <div class="col-md-3">
      
      <h1>User info</h1>
      <% if current_user %>
        <%= render 'userinfo', user: current_user %>
      <% end %>
      <hr>
      <h1>New book</h1>
      <%= render 'books/newbook', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <%= render 'users', users: @users %>

    </div>
  </div>
</div>